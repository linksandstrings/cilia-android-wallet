<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/send_coins_activity">

    <data>

        <import type="android.view.View" />

        <import type="com.cilia.wallet.activity.send.model.SendCoinsModel.TransactionStatus" />

        <variable
            name="viewModel"
            type="com.cilia.wallet.activity.send.model.SendCoinsViewModel" />
    </data>


    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/AccountProgressBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="5dp"
        android:indeterminate="true"
        android:visibility="@{(viewModel.transactionStatus == TransactionStatus.BUILDING) ? View.VISIBLE : View.GONE}" />

</layout>