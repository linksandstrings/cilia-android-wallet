<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/coinId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/exo2medium"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BTC" />

    <TextView
        android:id="@+id/coinFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/exo2medium"
        android:textColor="#49505C"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/coinId"
        app:layout_constraintStart_toEndOf="@+id/coinId"
        tools:text="Bitcoin" />

    <ImageView
        android:id="@+id/yellowArrow"
        android:layout_width="10.67dp"
        android:layout_height="10.67dp"
        android:layout_marginEnd="26.67dp"
        android:rotation="180"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bequant_arrow_up" />

    <ImageView
        android:id="@+id/grayArrow"
        android:layout_width="10.67dp"
        android:layout_height="10.67dp"
        android:layout_marginEnd="26.67dp"
        android:rotation="-90"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bequant_arrow_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
