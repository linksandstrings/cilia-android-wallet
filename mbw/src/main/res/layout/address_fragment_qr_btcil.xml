<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qrView"
    bind:showIn="@layout/address_fragment_btcil"
    android:layout_alignParentEnd="true">

    <data>
        <import type="com.mrd.bitlib.model.AddressType"/>

        <variable
            name="activity"
            type="androidx.fragment.app.FragmentActivity" />
        <variable
            name="viewModel"
            type="com.cilia.wallet.activity.main.address.AddressFragmentBtcILModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/address_fragment_qr"
            bind:viewModel="@{viewModel}"
            bind:activity="@{activity}" />

        <TextView
            android:id="@+id/tvTapNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@{viewModel.nextTypeLabel}" />
    </LinearLayout>
</layout>