<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/send_coins_activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.cilia.wallet.activity.send.model.SendCoinsViewModel" />
    </data>

    <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_page_margin"
            android:textColor="@color/fio_red"
            android:textSize="14sp"
            tools:text="Amount too small"
            app:errorAnimatedText="@{viewModel.errorText}"
            tools:visibility="visible" />
</layout>