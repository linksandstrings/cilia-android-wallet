<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#444444" />
            <solid android:color="#2F3F43" />
            <corners android:radius="2dp" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#444444" />
            <solid android:color="#0C1011" />
            <corners android:radius="2dp" />
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding" android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>

</selector>