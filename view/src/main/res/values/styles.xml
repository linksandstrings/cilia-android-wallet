<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CiliaButtonModern" parent="android:style/Widget.Button">
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/background_action_btn</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="CiliaButtonModernBlue" parent="CiliaButtonModern">
        <item name="android:background">@drawable/background_action_btn_blue</item>
        <item name="android:textColor">@color/btn_text_color_white</item>
    </style>
</resources>